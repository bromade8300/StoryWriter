<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StoryWriterClient.MainPage"
             Title="Mes Livres"
             BackgroundColor="{StaticResource Gray100}">

    <Grid RowDefinitions="Auto,*" Padding="20">

        <!-- Header -->
        <Grid ColumnDefinitions="*,Auto" Margin="0,10,0,20">
            <StackLayout Orientation="Horizontal" VerticalOptions="Center">
                <Label Text="&#x1F4DA;" FontSize="32" VerticalOptions="Center"/>
                <Label Text="Mes Livres"
                       FontSize="28"
                       FontAttributes="Bold"
                       VerticalOptions="Center"
                       Margin="10,0,0,0"/>
            </StackLayout>

            <Button Grid.Column="1"
                    Text="+ Nouveau"
                    FontSize="16"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="White"
                    CornerRadius="20"
                    Padding="20,10"
                    Clicked="OnCreateBookClicked"/>
        </Grid>

        <!-- Books Grid -->
        <CollectionView x:Name="BooksCollectionView"
                        Grid.Row="1"
                        ItemsLayout="VerticalGrid, 3"
                        SelectionMode="Single"
                        SelectionChanged="OnBookSelected">
            <CollectionView.EmptyView>
                <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
                    <Label Text="&#x1F4D6;" FontSize="64" HorizontalOptions="Center"/>
                    <Label Text="Aucun livre"
                           FontSize="20"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           Margin="0,10,0,5"/>
                    <Label Text="Commencez par crÃ©er votre premier livre !"
                           FontSize="14"
                           TextColor="Gray"
                           HorizontalOptions="Center"/>
                </StackLayout>
            </CollectionView.EmptyView>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border Margin="10"
                            Padding="0"
                            StrokeShape="RoundRectangle 15"
                            Stroke="LightGray"
                            BackgroundColor="White"
                            HeightRequest="280">
                        <Grid RowDefinitions="160,*">
                            <!-- Cover Image -->
                            <Border StrokeShape="RoundRectangle 15,15,0,0"
                                    StrokeThickness="0"
                                    BackgroundColor="{StaticResource Primary}">
                                <Grid>
                                    <Image Source="{Binding CoverImageUrl}"
                                           Aspect="AspectFill"
                                           IsVisible="{Binding CoverImageUrl, Converter={StaticResource StringToBoolConverter}}"/>
                                    <Label Text="&#x1F4D6;"
                                           FontSize="48"
                                           TextColor="White"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center"/>
                                </Grid>
                            </Border>

                            <!-- Book Info -->
                            <StackLayout Grid.Row="1" Padding="15,10" Spacing="5">
                                <Label Text="{Binding Title}"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       LineBreakMode="TailTruncation"
                                       MaxLines="2"/>
                                <Label Text="{Binding Author}"
                                       FontSize="13"
                                       TextColor="Gray"
                                       LineBreakMode="TailTruncation"/>
                                <StackLayout Orientation="Horizontal" Margin="0,5,0,0">
                                    <Label Text="{Binding Chapters.Count, StringFormat='{0} chapitres'}"
                                           FontSize="11"
                                           TextColor="{StaticResource Primary}"/>
                                    <Label Text=" | " FontSize="11" TextColor="LightGray"/>
                                    <Label Text="{Binding Characters.Count, StringFormat='{0} personnages'}"
                                           FontSize="11"
                                           TextColor="{StaticResource Primary}"/>
                                </StackLayout>
                            </StackLayout>
                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Loading Indicator -->
        <ActivityIndicator x:Name="LoadingIndicator"
                           Grid.Row="1"
                           IsRunning="False"
                           IsVisible="False"
                           Color="{StaticResource Primary}"
                           VerticalOptions="Center"
                           HorizontalOptions="Center"/>
    </Grid>
</ContentPage>
